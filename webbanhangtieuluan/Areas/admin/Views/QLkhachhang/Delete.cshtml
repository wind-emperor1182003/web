@model webbanhangtieuluan.Models.taikhoan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/layout2.cshtml";
}
@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/SanPham" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<div class="container">
    <h2 class="text-danger">Xóa tài khoản</h2>
    <hr />

    <h4>Bạn có chắc chắn muốn xóa tài khoản này?</h4>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.HoTen)</dt>
                <dd>@Html.DisplayFor(model => model.HoTen)</dd>

                <dt>@Html.DisplayNameFor(model => model.NgaySinh)</dt>
                <dd>@Html.DisplayFor(model => model.NgaySinh)</dd>

                <dt>@Html.DisplayNameFor(model => model.GioiTinh)</dt>
                <dd>@Html.DisplayFor(model => model.GioiTinh)</dd>

                <dt>@Html.DisplayNameFor(model => model.DienThoai)</dt>
                <dd>@Html.DisplayFor(model => model.DienThoai)</dd>

                <dt>@Html.DisplayNameFor(model => model.TaiKhoanweb)</dt>
                <dd>@Html.DisplayFor(model => model.TaiKhoanweb)</dd>

                <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                <dd>@Html.DisplayFor(model => model.Email)</dd>

                <dt>@Html.DisplayNameFor(model => model.DiaChi)</dt>
                <dd>@Html.DisplayFor(model => model.DiaChi)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm("Delete", "QLkhachhang", new { id = Model.MaKH }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Hủy", "dskhachhang", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
