@model webbanhangtieuluan.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/layout2.cshtml";
}
@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/SanPham" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<div class="container">
    <h2 class="text-center">Chi tiết sản phẩm</h2>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>@Model.TenSanPham</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.TenSanPham)</dt>
                        <dd>@Html.DisplayFor(model => model.TenSanPham)</dd>

                        <dt>@Html.DisplayNameFor(model => model.GiaBan)</dt>
                        <dd>@Html.DisplayFor(model => model.GiaBan)</dd>

                        <dt>@Html.DisplayNameFor(model => model.MoTa)</dt>
                        <dd>@Html.DisplayFor(model => model.MoTa)</dd>

                        <dt>@Html.DisplayNameFor(model => model.Xuatsu)</dt>
                        <dd>@Html.DisplayFor(model => model.Xuatsu)</dd>

                        <dt>@Html.DisplayNameFor(model => model.HanSuDung)</dt>
                        <dd>@Html.DisplayFor(model => model.HanSuDung)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.AnhBia)</dt>
                        <dd>
                            <img class="img-thumbnail" src="@Url.Content("~/IMG/" + Model.AnhBia)" alt="image" style="max-width: 100px; max-height: 100px;" />
                        </dd>

                        <dt>@Html.DisplayNameFor(model => model.SoLuongTon)</dt>
                        <dd>@Html.DisplayFor(model => model.SoLuongTon)</dd>

                        <dt>@Html.DisplayNameFor(model => model.MaLoai)</dt>
                        <dd>@Html.DisplayFor(model => model.MaLoai)</dd>

                        <dt>@Html.DisplayNameFor(model => model.MaThuongHieu)</dt>
                        <dd>@Html.DisplayFor(model => model.MaThuongHieu)</dd>

                        <dt>@Html.DisplayNameFor(model => model.Moi)</dt>
                        <dd>@Html.DisplayFor(model => model.Moi)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Chỉnh sửa", "edits", new { id = Model.MaSanPham }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Trở về danh sách", "dssanpham", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>