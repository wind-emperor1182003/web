        .dropdown-menu {
            /*background-color: black;*/
            border: 1px solid #6c757d;
            padding: 10px;
            column-count: 3; /* Adjust the number of columns as needed */
            left: 50%;
            transform: translateX(-50%);
        }

        .dropdown-item {
            padding: 10px 20px;
            margin: 2px 0;
            border-radius: 5px;
        }

        .menu ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

            .menu ul li {
                display: inline-block;
                position: relative;
            }

                .menu ul li a {
                    display: block;
                    padding: 10px 20px;
                    text-decoration: none;
                    color: #333;
                    position: relative;
                }

                    .menu ul li a::before {
                        margin-right: 5px;
                        Khoảng cách giữa biểu tượng và văn bản;
                    }

                .menu ul li:hover > ul {
                    display: block;
                }

            .menu ul ul {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                background-color: #fff;
                border: 1px solid #ccc;
            }

                .menu ul ul li {
                    display: block;
                }

                    .menu ul ul li a {
                        padding: 10px 20px;
                        color: #333;
                    }

                .menu ul ul ul {
                    top: 0;
                    left: 100%;
                }

                .menu ul ul li:hover {
                    background-color: #f9f9f9;
                }

        .menu {
            position: relative;
            z-index: 999;
            Đảm bảo menu con hiển thị trước carousel;
        }

        .carousel {
            position: relative;
            z-index: 1;
            Đảm bảo carousel không che khuất menu con;
        }

        footer {
            background-color: #000; /* Change footer background color to black */
