            }

            .footer-col p,
            .footer-col ul {
                color: #ccc; /* Set paragraph and list color to light gray */
                font-size: 14px;
                margin-bottom: 20px;
            }

                .footer-col ul li {
                    margin-bottom: 10px;
                }

                    .footer-col ul li a {
                        color: #ccc; /* Set link color to light gray */
                        text-decoration: none;
                        transition: color 0.3s;
                    }

