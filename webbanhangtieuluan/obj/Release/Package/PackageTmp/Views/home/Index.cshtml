<div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center; margin:10px 0;">
    <span style="font-size: 20px; background-color: white; padding: 0 10px;">
        SẢN PHẨM <!--Padding is optional-->
    </span>
</div>
<div class="product-filter">
    <label for="product-type">Chọn loại sản phẩm:</label>
    <div class="horizontal-select">
        <select id="product-type">
            <option value="all">tất cả sản phẩm</option>
            @Html.Action("loaiPartial", "loaimypham")
            <!-- Thêm các option cho các loại sản phẩm khác -->
        </select>
    </div>
</div>
    @{
        var count1 = 0;
    }
    <ul class="container-menu">
        @foreach (var item in Model)
        {
            if (count1 < 8)
            {
                var name = "";
                if (item.TenSanPham.Length < 35)
                {
                    name = item.TenSanPham;
                }
                else
                {
                    name = item.TenSanPham.Substring(0, 35) + "...";
                }

                <li class="product col-sm-3 col-lg-3" data-type="@item.MaLoai">
                    <a class="item-image" href="@Url.Action("XemChiTiet", "sanpham", new { @ms = item.MaSanPham })" title="@item.TenSanPham">
                        <img class="card-img-top" src=" @Url.Content("~/IMG/" + item.AnhBia) "alt=" image">

                    </a>
                    <h4 class="name"><a href="@Url.Action("XemChiTiet", "sanpham", new { @ms = item.MaSanPham })">@Html.DisplayFor(modelItem => name)</a></h4>
                    <hr />
                    <p class="price-label" style="color: #e68b24">@string.Format("{0:#,##0.##}₫", item.GiaBan)</p>
                    <br />
                </li>
                count1++;

            }
        }

    </ul>
<div class="text-center">
